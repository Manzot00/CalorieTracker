<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AuthButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/auth_button_background</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">@color/text_secondary</item><!-- Colore per l'hint -->
        <item name="android:textColor">"@color/text_primary"</item> <!-- Colore per il testo -->
        <item name="android:textSize">16sp</item>
    </style>
    <style name="YourSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:popupBackground">@drawable/spinner_background</item>
    </style>

    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#A2A2A2</item>
        <item name="android:background">@color/third_color</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:buttonTint">@color/text_primary</item>
    </style>

</resources>